<Application x:Class="WeatherForcaster.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:WeatherForcaster"
             xmlns:theme="clr-namespace:Microsoft.Windows.Themes;assembly=PresentationFramework.Aero2"
             StartupUri="MainWindow.xaml" Startup="App_OnStartup" >
    <Application.Resources>
        <FontFamily x:Key="Poppins-Bold">./Fonts/Poppins-Bold.ttf#Poppins Bold</FontFamily>
        <FontFamily x:Key="Poppins-BoldItalic">./Fonts/Poppins-BoldItalic.ttf#Poppins BoldItalic</FontFamily>
        <FontFamily x:Key="Poppins-Italic">./Fonts/Poppins-Italic.ttf#Poppins Italic</FontFamily>
        <FontFamily x:Key="Poppins-Light">./Fonts/Poppins-Light.ttf#Poppins Light</FontFamily>
        <FontFamily x:Key="Poppins-Medium">./Fonts/Poppins-Medium.ttf#Poppins Medium</FontFamily>
        <FontFamily x:Key="Poppins-Regular">./Fonts/Poppins-Regular.ttf#Poppins Regular</FontFamily>
        <FontFamily x:Key="Poppins-SemiBold">./Fonts/Poppins-SemiBold.ttf#Poppins SemiBold</FontFamily>
    </Application.Resources>
</Application>
